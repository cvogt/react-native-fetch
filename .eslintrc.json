{
    "root": true,
    "parser": "@babel/eslint-parser",
    "extends": [
        "@react-native-community",
        "prettier",
        "prettier/flowtype",
        "plugin:flowtype/recommended"
    ],
    "plugins": [
        "@babel/eslint-plugin",
        "flowtype"
    ],
    "settings": {
        "flowtype": {
            "onlyFilesWithFlowAnnotation": true
        }
    },
    "globals": {
        "ReadableStream": true,
        "Blob": true,
        "FileReader": true,
        "TextDecoder": true,
        "TextEncoder": true
    }
}
